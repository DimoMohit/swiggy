<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Hotel</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.title %></td>
        <td><%= order.hotel_id %></td>
        <td><%= order.group %></td>
        <td><%= link_to 'Show', order,class: 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_order_path(order),class: 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-outline-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path,class: 'btn btn-outline-primary btn-sm' %>
