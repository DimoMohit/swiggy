<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @order.title %>
</p>

<p>
  <strong>Hotel:</strong>
  <%= @order.hotel_id %>
</p>

<p>
  <strong>Group:</strong>
  <%= @order.group %>
</p>
<p>
  <strong>Items:</strong>
  <table class="table table-striped table-light">
    <tr>
      <th>
        Name
      </th>
      <th>
        Price
      </th>
      <th>
        Order By
      </th>
      <th>
        <%= link_to 'Add Item', new_order_item_path(@order),class: 'btn btn-outline-primary btn-sm' %>
      </th>
    </tr>

    <% @order.items.each do |item| %>
      <tr>
        <td>
          <%= item.name %>
        </td>
        <td>
          <%= item.price %>
        </td>
        <td colspan="2">
          <%= item.user ? "#{item.user.name} (#{item.user.email})" : '' %>
        </td>
      </tr>
    <% end %>
  </table>
</p>

<%= link_to 'Edit', edit_order_path(@order),class: 'btn btn-outline-primary btn-sm' %> |
<%= link_to 'Back', orders_path,class: 'btn btn-outline-primary btn-sm' %>
<%= link_to 'Team Member', team_groups_path,class: 'btn btn-outline-primary btn-sm' %>
<%= link_to 'Add Team Member', new_team_member_groups_path,class: 'btn btn-outline-primary btn-sm' %>
